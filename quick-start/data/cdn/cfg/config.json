{
    "http": {
        "port": 8083,
        "restrict_hostname": "localhost",
        "client_url": "http://localhost:4096"
    },
    "paths": {
        "contentBase": "./content"
    },
    "resourceRepositories": [
        {
            "name": "attachments",
            "acceptedTypes": "*",
            "limits": {
                "sizeMax": 2097152,
                "noFiles": 4
            }
        },
        {
            "name": "avatars",
            "acceptedTypes": [
                "image/png",
                "image/jpeg",
                "image/gif"
            ],
            "limits": {
                "sizeMax": 10485760,
                "noFiles": 1
            }
        }
    ]
}